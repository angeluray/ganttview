<div id="<%= dom_id task %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Task name:</strong>
    <%= task.task_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Task description:</strong>
    <%= task.task_description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Start date:</strong>
    <%= task.start_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">End date:</strong>
    <%= task.end_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Duration:</strong>
    <%= task.duration %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Parent unique:</strong>
    <%= task.parent_unique_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Unique task:</strong>
    <%= task.unique_task_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Project:</strong>
    <%= task.project_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Task type:</strong>
    <%= task.task_type_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this task", task, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this task', edit_task_path(task), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
