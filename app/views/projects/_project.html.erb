<div id="<%= dom_id project %>" class="w-full md:w-1/3 bg-green-500 border-0 rounded hover:shadow-lg">

  <% if action_name == "show" %>
    <p class="my-5 w-full px-3 text-clip ">
      <%= turbo_frame_tag dom_id(project) do %>
        <%= link_to project.project_name, edit_project_path(project), class: "block font-medium mb-1 text-base md:text-2xl nunosans p-3 text-white rounded bg-green-600 truncate" %>
      <% end %>
    </p>
  <% end %>

  <% if action_name != "show" %>
    <p class="my-5 w-full px-3 text-clip">
        <%= link_to project.project_name, project_path(project), class: "block font-medium mb-1 text-base md:text-2xl nunosans p-3 text-white rounded bg-green-600 truncate" %>
    </p>

    <%= link_to project, class: "rounded-full p-3 flex justify-end items-center font-medium" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-9 h-9 rounded-full text-white">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12.75 15l3-3m0 0l-3-3m3 3h-7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    <% end %>
  <% end %>

</div>
